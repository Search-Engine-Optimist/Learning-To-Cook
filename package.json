{
  "name": "learning-to-cook-site",
  "private": true,
  "devDependencies": {
    "prettier": "3.6.2",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "wait-on": "^7.2.0",
    "pa11y-ci": "^3.1.0"
  },
  "scripts": {
    "prettier:check": "prettier --check \"**/*.{html,css,md}\"",
    "prettier:write": "prettier --write \"**/*.{html,css,md}\"",
    "serve:static": "http-server ./dist -p 8080 --silent",
    "a11y": "run-p -r serve:static a11y:run",
    "a11y:run": "wait-on http://127.0.0.1:8080 && pa11y-ci",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage"

  }
}
