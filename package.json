{
  "name": "learning-to-cook",
  "private": true,
  "type": "module",
  "scripts": {
    "prettier:check": "prettier --check \"**/*.{html,css,js,mjs,json,md}\"",
    "prettier:write": "prettier --write \"**/*.{html,css,js,mjs,json,md}\"",
    "serve:static": "http-server . -p 8080 --silent",
    "a11y": "run-p -r serve:static a11y:run",
    "a11y:run": "wait-on http://127.0.0.1:8080/index.html && pa11y-ci",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "format": "prettier . --write --ignore-unknown",
    "format:check": "prettier . --check --ignore-unknown",
    "lint": "eslint . --ext .js,.mjs,.cjs --max-warnings=0",
    "lint:fix": "eslint . --ext .js,.mjs,.cjs --fix"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^2.1.3",
    "cheerio": "^1.0.0-rc.12",
    "eslint": "^9.35.0",
    "http-server": "^14.1.1",
    "npm-run-all": "^4.1.5",
    "pa11y-ci": "^3.1.0",
    "prettier": "3.6.2",
    "vitest": "^2.1.3",
    "wait-on": "^7.2.0"
  }
}
